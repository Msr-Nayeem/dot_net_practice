<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-eTJ0b0mUx29qUkX9dsY+orCVHJxc8CvE1f/XB1/DHpwQ+oVC8KeLbhdzD/h+6l78V7nYS1sugEdV2U+T6TbT7g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/ProductNav.css")

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" integrity="sha512-9OG4RL4vjyCtCKMAv/cI95a+PmYShn/8kxjtkbm/9lE1I+18yJn75yk2vslPxnG+tNwzmYlTh8Iv74fR9X4omQ==" crossorigin="anonymous" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar">@Html.ActionLink("Info", "Info", "Home")</span>
                </button>
                @Html.ActionLink("Practice App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Home", "Index", "Product")</li>
                    <li>@Html.ActionLink("Customer list", "Customers", "Product")</li>
                    <li>@Html.ActionLink("New Customer", "NewCustomer", "Product")</li>
                    <li>@Html.ActionLink("Cetegory", "Cetegory", "Product")</li>
                    <li>@Html.ActionLink("New Product", "NewProduct", "Product")</li>
                    <li>@Html.ActionLink("Cart", "Cart", "Product")
                       
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

   


    <script>
        $(function () {
            var url = window.location.pathname;
            $('.nav li a').each(function () {
                if ($(this).attr('href') === url) {
                    $(this).closest('li').addClass('active');
                }
            });
        });
    </script>

</body>
</html>
