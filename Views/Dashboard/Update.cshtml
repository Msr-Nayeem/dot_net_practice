@model WebApplication1.Models.StudentsDashboard
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/loggedLayout.cshtml";
}


<h2>Update Information</h2>
<form action="/Dashboard/Update" method="post">
        
    <input type="text" class="form-control" id="Id" name="Id" placeholder="Enter Id" value="@Model.Id" hidden/>
       
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name" value="@(Model?.Name ?? "")" />
        <br />@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter Your Email" value="@(Model?.Email ?? "")" />
        <br /> @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Phone">Phone:</label>
        <input type="text" class="form-control" id="Phone" name="Phone" placeholder="Enter Phone Number" value="@(Model?.Phone == null ? "" : "0" + Model.Phone)" />
        <br />@Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Dob">Date Of Birth:</label>
        <input type="date" class="form-control" id="Dob" name="Dob" value="@(Model?.Dob.ToString("yyyy-MM-dd") ?? "")" />
        @Html.ValidationMessageFor(m => m.Dob, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <label for="Gender">Gender:</label>
        <br />
        <input type="radio" id="Gender-male" name="Gender" value="Male" @(Model?.Gender == "Male" ? "checked" : "") />
        <label for="Gender-male">Male</label>

        <input type="radio" id="gender-female" name="Gender" value="Female" @(Model?.Gender == "Female" ? "checked" : "") />
        <label for="gender-female">Female</label>
        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-primary" href="@(Request.UrlReferrer?.ToString() ?? Url.Action("Index", "Home"))">Cancel</a>
</form>