@model List<WebApplication1.Entity.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_product.cshtml";
}
@Styles.Render("~/Content/productCard.css")

<div class="product-container">
    @if (Model.Any())
    {
        foreach(var product in Model)
        {

            <div class="product-card">
                <div class="badge">Hot</div>
                <div class="product-tumb">
                    <a href="/Product/NewProduct"><img src="@Url.Content("~/UploadedFiles/" + @product.ImageLink)" alt="@product.ProductName"></a>
                </div>
                <div class="product-details">
                    <h4><a href="@Url.Action("ProductDetails", "Product", new { id = product.Id })">@product.ProductName</a></h4>
                    <div class="product-bottom-details">
                        <div class="product-price">@product.ProductPrice</div>
                        <div class="product-links">
                            <a href="/Product/NewProduct">Wishlist</a>
                            <a href="/Product/Cetegory">Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <span> No Product Available</span>
    }


</div>