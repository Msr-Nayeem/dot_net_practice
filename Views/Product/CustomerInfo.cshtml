@{
    ViewBag.Title = "CustomerInfo";
    Layout = "~/Views/Shared/_Layout_product.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Customer Information</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content("~/UploadedFiles/Customer/" + @Model.ImageLink)" alt="CustomerImage">

        </div>
        <div class="col-md-6">

            <table class="table table-bordered border-dark table-hover">
                <tbody>

                    <tr>
                        <td>Name</td>
                        <td>@Model.CustomerName</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                </tbody>
            </table>
            <a href="" class="btn btn-primary">Edit/Update</a>
            <a class="btn btn-primary" href="@(Request.UrlReferrer?.ToString() ?? Url.Action("Index", "Home"))">Back</a>
        </div>
    </div>
</div>